{
    "manifest_version": 3,
    "name": "SAP Scout (Tab Monitor)",
    "version": "5.3",
    "description": "Monitors network traffic on the Super Auto Pets tab.",
    "permissions": [
      "storage"
    ],
    "host_permissions": [
        "*://teamwood.itch.io/*",
        "*://v6p9d9t4.ssl.hwcdn.net/*",
        "*://html-classic.itch.zone/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
        "matches": [
            "*://teamwood.itch.io/*",
            "*://v6p9d9t4.ssl.hwcdn.net/*",
            "*://html-classic.itch.zone/*"
        ],
        "js": ["content.js"],
        "run_at": "document_start",
        "all_frames": true
        }
    ],
    "web_accessible_resources": [
      {
        "resources": ["inject.js"],
        "matches": [
            "*://teamwood.itch.io/*",
            "*://v6p9d9t4.ssl.hwcdn.net/*",
            "*://html-classic.itch.zone/*"
        ]
      }
    ]
}