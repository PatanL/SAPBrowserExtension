{
  "manifest_version": 3,
  "name": "SAP Scout (Tab Monitor)",
  "version": "4.0",
  "description": "Monitors network traffic on the Super Auto Pets tab.",
  "permissions": [
    "storage",
    "debugger",
    "tabs"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}